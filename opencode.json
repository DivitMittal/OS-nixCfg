{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "~/OS-nixCfg"
      ],
      "enabled": true
    },
    "nixos": {
      "type": "local",
      "command": ["uvx", "mcp-nixos"],
      "enabled": true
    }
  }
}
